<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/avatar"
        android:layout_alignTop="@+id/avatar"
        android:textStyle="bold"
        android:text="Pseudo hÃ´te" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/pseudo"
        android:layout_below="@+id/pseudo"
        android:text="Titre de l'atelier" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/illustrationevent"
            android:src="@drawable/eventpicture"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="10dp"
            android:text="Description de l'event"/>

        <Button
            android:id="@+id/goIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="250dp"
            android:layout_centerHorizontal="true"
            android:text="PARTICIPER"
            android:onClick="onClick"
            android:background="@color/colorFirstApp"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

</RelativeLayout>