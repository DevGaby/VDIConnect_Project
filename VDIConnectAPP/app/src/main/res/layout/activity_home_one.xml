<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFirstApp"
    tools:context=".HomeOneActivity">

    <ImageView
        android:id="@+id/homeTwoImg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/discountwhite"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/homeTwoText"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:text="@string/app_home2"
        android:textColor="@color/colorFontApp"
        android:textSize="25sp" />

</RelativeLayout>